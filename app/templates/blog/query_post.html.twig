{% extends 'base.html.twig' %}

{% block title %}Результаты поиска{% endblock %}

{% block body %}
    {% for post in posts %}
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">{{ post.title }}</h5>
                <p class="card-text">{{ post.body | slice(0, 255) ~ '...'  }}</p>
                <a href="{{ path('blog_show', {slug: post.slug}) }}" class="btn btn-primary">Подробнее</a>
            </div>
        </div>
    {% endfor %}
    <small class="d-block text-right mt-3">
        <a href="{{ path('blog_posts') }}">На главную</a>
    </small>
{% endblock %}